<footer>
    <div class="container">
        <div class="col-md-4 col-sm-6"> 
            <aside class="widget widget-recent">
                <h5 class="widget-title">Recent Post</h5>                    
                    {% set postslist = collections.posts %}
                    <ul>
                    {% for post in postslist | reverse %}
                        <li {% if post.url == url %} data-current="current item"{% endif %}>
                            <a class="post-title" href="{{ post.url | url }}">
                                {% if post.data.title %}
                                        
                                        {{ post.data.title }}
                                {% else %}
                                        Untitled
                                {% endif %}
                            </a>
                            <p class="meta-entry">
                                <time datetime="{{ post.date | machineDate }}">
                                <span class="post-date">                    
                                    {{ post.date | readableDate }}
                                </span>
                                <span class="author">
                                    by {{ metadata.author.name }}
                                </span>
                                </time>
                            </p>                                    
                        </li>                                
                    {% endfor %}
                    </ul>
            </aside>
        </div>
        <div class="col-md-4 col-sm-6">               
            <aside class="widget widget-tag">
                    <h5 class="widget-title">tag cloud</h5>                    
                    <a href="/tags/tech/" rel="tag">tech</a> 
                    <a href="/tags/environment/" rel="tag">environment</a> 
                    <a href="/tags/politics/" rel="tag">politics</a> 
                    <a href="/tags/sport/" rel="tag">sport</a>                    
                </aside>
        </div>
        <div class="col-md-4 col-sm-12">
            <aside class="widget widget-categories">
