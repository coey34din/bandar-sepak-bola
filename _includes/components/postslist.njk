<section>
{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %} class="p-list">
			<a href="{{ post.url | url }}">
				{% if post.data.thumbs %}
					<img class="thum-list" src="{{ '/' | url }}static/img/{{ post.data.thumbs }}">
					{% else %}
						<img class="thum-list" src="{{ '/' | url }}static/img/no-image.png">
				{% endif %}	
				<aside>				
					<h3>						
						{% if post.data.title %}
							{{ post.data.title }}
						{% else %}
							Untitled
						{% endif %}						
					</h3>
					{% if post.data.summary %}
						<p>
							{{ post.data.summary }}
						</p>
					{% endif %}
					<p class="meta-entry">
						<time datetime="{{ post.date | machineDate }}">
							<span class="post-date">                    
								{{ post.date | readableDate }}
							</span>
						</time>
						<span class="author">
							by <strong>{{ metadata.author.name }}</strong>
						</span>
						
					</p>
					{% if post.data.tags %}
						<p>
							{% for tag in post.data.tags %}
								{%- if tag != "post" -%}
									{% set tagUrl %}/tags/{{ tag }}/{% endset %}
									<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
								{%- endif -%}
							{% endfor %}
						</p>
					{% endif %}
				</aside>
			</a>
		</article>
	{% endfor %}

</section>
