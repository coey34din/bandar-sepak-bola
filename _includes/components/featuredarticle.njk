<section class="featured-article">
    <div class="row ">
        <div class="col-md-12">
            <h6 class="widget-title">Featured Article</h6>
        </div>
        {% set postslist = collections.posts %}         
        {% set a = 0 %}
        {% for post in postslist | reverse %}            
            {% if a < 3 %}
            {%set a = a + 1 %}
            <aside {% if post.url == url %} data-current="current item"{% endif %} class="col-md-4">
                <div class="main-featured">
                    <a href="{{ post.url | url }}" title="Top 10 eSport Players" class="more-button">
                        <div class="card-img-top">
                            {% if post.data.thumbs %}
                                <img src="{{ '/' | url }}static/img/{{ post.data.thumbs }}">
                                {% else %}
                                    <img  src="{{ '/' | url }}static/img/no-image.png">
                            {% endif %}		
                        </div>
                        <div class="post-title">
                            <h3 class="title">
                                    {% if post.data.title %}                                             	
                                        {{ post.data.title }}
                                    {% else %}
                                        Untitled
                                    {% endif %}
                            </h3>                            
                            <div class="meta-entry">
                                <ul>
                                    <li class="meta-date">                            
                                        <time datetime="{{ post.date | machineDate }}">
                                            <small>{{ post.date | readableDate }} </small>
                                        </time>
                                    </li>
                                    <li class="author">                            
                                        by {{ metadata.author.name }}
                                    </li>
                                </ul>
                            </div>
                            </div>
                            <div class="card-body">
                            {% if post.data.summary %}
                                <div class="excerpt">
                                    {{ post.data.summary }}
                                </div>
                            {% endif %}
                        </div>
                    </a> 
                </div>                       
            </aside>
            {% endif %}
        {% endfor %}
    </div>
</section>