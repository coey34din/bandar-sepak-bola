---
layout: layouts/base.njk
section: home
---
<div class="container">
<section class="headline">
    <div class="row">
        <aside class="col-md-8">
            <div class="m-slider">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">               
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="{{ '/' | url }}static/img/slider1.jpg" alt="" style="width:100%;">
                        </div>
                        <div class="item">
                            <img src="{{ '/' | url }}static/img/slider2.jpg" alt="" style="width:100%;">
                        </div>
                        <div class="item">
                            <img src="{{ '/' | url }}static/img/slider3.jpg" alt="" style="width:100%;">
                        </div>
                        <div class="item">
                            <img src="{{ '/' | url }}static/img/slider4.jpg" alt="" style="width:100%;">
                        </div>
                        <div class="item">
                            <img src="{{ '/' | url }}static/img/slider5.jpg" alt="" style="width:100%;">
                        </div>
                    </div>
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="arrow-left"></span>                       
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="arrow-right"></span>
                    </a>
                </div>  
            </div>     
        </aside>
        <aside class="col-md-4 bg-main">
            <article>
                {{ layoutContent | safe }}
            </article>
            
        </aside>
    </div>
</section>
{% include "components/featuredarticle.njk" %}	
</div>
